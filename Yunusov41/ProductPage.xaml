<Page x:Class="Yunusov41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yunusov41"
      mc:Ignorable="d" 
      d:Height="600" Width="1200"
      Title="ProductPage" FontFamily="Comic Sans MS" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <TextBlock Text="Вы авторизованы как " FontSize="20" Margin="45, 0, 0, 0"></TextBlock>
            <TextBlock Text="Фамилия Имя Отчество " Name="UserNameTB" FontSize="20" Margin="260, 0, 0, 0" ></TextBlock>

        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Text="Роль: " FontSize="20" Margin="45, 0, 0, 0"></TextBlock>
            <TextBlock Text="Нет " Name="RoleNameTB" FontSize="20" Margin="105, 0, 0, 0" ></TextBlock>


        </Grid>
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="270"></ColumnDefinition>
                <ColumnDefinition Width="320"></ColumnDefinition>
                <ColumnDefinition Width="320"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="RecordCounter" VerticalAlignment="Center" Text="0 из 0 записей" FontSize="20" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Grid.Column="1" Text="поиск по наименованию" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            <RadioButton Grid.Column="2" Content="по возрастанию стоимости" GroupName="Sort" FontSize="20" Checked="RButtonUp_Checked" Name="RButtonUp" HorizontalAlignment="Left"></RadioButton>
            <TextBlock Grid.Column="3" Text="фильтрация по скидке" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"></ColumnDefinition>
                <ColumnDefinition Width="270"></ColumnDefinition>
                <ColumnDefinition Width="320"></ColumnDefinition>
                <ColumnDefinition Width="320"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="1" Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="235" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
            <RadioButton Grid.Column="2" Content="по убыванию стоимости" GroupName="Sort" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Name="RButtonDown" Checked="RButtonDown_Checked"></RadioButton>
            <ComboBox Grid.Column="3" Name="ComboType" SelectionChanged="ComboType_SelectionChanged" FontSize="15" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ComboBoxItem>все диапазоны</ComboBoxItem>
                <ComboBoxItem>от 0 до 9,99%</ComboBoxItem>
                <ComboBoxItem>от 10 до 14,99%</ComboBoxItem>
                <ComboBoxItem>от 15 и более</ComboBoxItem>
            </ComboBox>
            <Button Grid.Column="0" Name="OrderBtn" Content="Просмотреть заказ" Width="200" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Center" Click="OrderBtn_Click" Visibility="Collapsed"></Button>
        </Grid>
            <Grid Grid.Row="5">
            <ListView Name="ProductListView" >
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Добавить к заказу" Click="MenuItem_Click"></MenuItem>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190"/>
                                <ColumnDefinition Width="800"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        <Image Width="150" Grid.Column="0" Grid.RowSpan="5" Stretch="Uniform" HorizontalAlignment="Left">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            rec/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" ></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} руб}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"/>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0} %}" Grid.Column="2" Grid.Row="3" Grid.RowSpan="4" HorizontalAlignment="Left" FontSize="40"/>

                    </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </Grid>
    </Grid>
</Page>
