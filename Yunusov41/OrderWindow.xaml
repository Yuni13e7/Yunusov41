<Window x:Class="Yunusov41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yunusov41"
        mc:Ignorable="d"
        Title="OrderWindow" Height="600" Width="1200" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"></ColumnDefinition>
            <ColumnDefinition Width="740"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="280"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Заголовки -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата формирования заказа" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата доставки заказа" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="ФИО клиента" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Номер заказа" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Пункт выдачи" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>

        <!-- Данные -->
        <TextBlock Grid.Row="0" Grid.Column="1" Name="OrderDateTB" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Margin="5"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="DeliveryDateTB" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" Name="ClientTB" HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1" Name="TBOrderID" HorizontalAlignment="Left" FontSize="18" VerticalAlignment="Center"></TextBlock>

        <!-- Пункт выдачи -->
        <ComboBox Grid.Row="5" Grid.Column="1" Name="PickupCombo" SelectionChanged="PickupCombo_SelectionChanged"  
                  FontSize="15" Width="400" VerticalAlignment="Center" HorizontalAlignment="Left"></ComboBox>

        <!-- Кнопка сохранения -->
        <Button Grid.Row="6" Grid.Column="1" Name="BtnSave" Content="Сохранить" 
                Click="BtnSave_Click" HorizontalAlignment="Left" Margin="300,0,0,0" 
                VerticalAlignment="Center" Height="30"></Button>

        <!-- Суммы -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Общая сумма" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Сумма со скидкой" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,15"></TextBlock>
        <TextBlock Grid.Row="6" Grid.Column="1" Name="TotalSumTB" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="1" Name="DiscountedSumTB" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Margin="0,0,0,15"></TextBlock>

        <!-- Список товаров -->
        <Grid Grid.Row="4" Grid.ColumnSpan="2">
            <ListView Name="ProductListView2">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <Grid Width="950">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="190"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <!-- Изображение -->
                            <Image Width="150" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Left">
                                <Image.Source>
                                    <Binding Path="ProductPhotoPath">
                                        <Binding.TargetNullValue>
                                            <ImageSource>rec/picture.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <!-- Информация о товаре -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding ProductName}" Grid.Row="0" 
                                               HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" 
                                               TextWrapping="Wrap"></TextBlock>
                                <TextBlock Text="{Binding ProductDescription}" Grid.Row="1" 
                                               HorizontalAlignment="Left" FontSize="16"></TextBlock>
                                <TextBlock Text="{Binding ProductManufacturer}" Grid.Row="2" 
                                               HorizontalAlignment="Left" FontSize="16"></TextBlock>
                                <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} руб}" Grid.Row="3" 
                                               HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"></TextBlock>
                            </StackPanel>

                            <!-- Правая колонка: скидка и кнопки -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Скидка -->
                                <TextBlock Text="Скидка" FontSize="16" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" 
                                               FontSize="30" HorizontalAlignment="Center"/>

                                <!-- Кнопки управления количеством -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button Name="BtnMinus" Content="-" 
                                                Click="BtnMinus_Click" 
                                                Width="35" Height="35" 
                                                FontSize="16" FontWeight="Bold"
                                                Tag="{Binding ProductArticleNumber}">
                                        <Button.DataContext>
                                            <Binding/>
                                        </Button.DataContext>
                                    </Button>

                                    <TextBlock Text="{Binding OrderQuantity}" 
                                                   FontSize="18" FontWeight="Bold" 
                                                   Width="40" TextAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   Margin="10,0,10,0"></TextBlock>

                                    <Button Name="BtnPlus" Content="+" 
                                                Click="BtnPlus_Click" 
                                                Width="35" Height="35" 
                                                FontSize="16" FontWeight="Bold"
                                                Tag="{Binding ProductArticleNumber}">
                                        <Button.DataContext>
                                            <Binding/>
                                        </Button.DataContext>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>